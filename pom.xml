<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <groupId>org.gregwalters.hyperic.plugin</groupId>
  <artifactId>irc-plugin</artifactId>
  <version>0.4-SNAPSHOT</version>
  <name>IRC Hyperic Plugin</name>

  <build>
	  <plugins>
		  <plugin>
			  <groupId>org.codehaus.mojo</groupId>
			  <artifactId>exec-maven-plugin</artifactId>
		  </plugin>
	  </plugins>
  </build>
  <repositories>
	  <repository>
		  <id>hyperic-snapshot</id>
		  <name>Hyperic Release Repository</name>
		  <url>http://maven.hyperic.org/release</url>
		  <snapshots>
			  <enabled>false</enabled>
		  </snapshots>
	  </repository>
  </repositories>


  <dependencies>
	  <dependency>
		  <groupId>org.hyperic.hq</groupId>
		  <artifactId>hq-pdk</artifactId>
		  <version>4.5</version>
	  </dependency>
	  <dependency>
		  <groupId>org.hyperic.hq.plugin</groupId>
		  <artifactId>netservices-plugin</artifactId>
		  <version>4.5</version>
	  </dependency>
  </dependencies>
</project>
